<!DOCTYPE html>
<html>
<head>
  <title>Add friend</title>
  <%- include('./partials/link') %>
  <link rel="stylesheet" href="/public/css/styles.css">
</head>
<body>
  <%- include('./partials/nav') %>
  <div class="grid-container bg-white">
    <div class="topbar">
      <%- include('./partials/nav'); %>
    </div>
    <div class="bg-dark-less text-center pb-3 sidebar  d-none d-md-block">
      <%- include('./partials/contact'); %>
      <div class="link">
        <a 
          href="/userpage" 
          class="btn btn-info btn-sm align-items-center d-flex text-dark-75 fw-bold p-0 gap-2 px-2"
        >
          <i class="bi bi-person-square fs-4"></i>
          Profile
        </a>
      </div>
    </div>
    <div class="flex-column align-items-center m-0 p-0">
      <div class="text-center bg-dark-less gap-2 p-1 px-2">
        <div class="d-flex justify-content-between  py-1">
          <!-- Offcanvas toggle -->
          <div class="d-flex justify-content-sm-between justify-content-md-center text-light">
            <button 
              class="btn btn-light btn-sm d-md-none text-secondary text-capitalize fw-bold" 
              type="button" 
              data-bs-toggle="offcanvas" 
              data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar">
              Chat
              <i class="bi bi-chat-square-text-fill"></i>
            </button>
          </div>
          <span class="text-secondary btn btn-light btn-sm ">
            <i class="bi bi-search"></i>
          </span>
          <div class="d-none d-md-block"></div>
        </div>
      </div>
      <div class="flex flex-column">
        <% if (confirm) { %>
          <div id="alert" class="alert alert-<%= alertType %> text-center m-2" role="alert">
            <span class="fw-bold text-<%= alertType %> text-capitalize">
              <%= confirm %>
            </span>
          </div> 
        <% } %>   
        <h1 class="text-center text-secondary my-2 fw-bold">Ajouter des amis !</h1>
        <!-- Gestion statut -->
        <div class="d-flex justify-content-center mt-2">
          <div class="dropdown ">
            <button 
              class="btn btn-light dropdown-toggle fw-bold text-secondary w-100" 
              type="button" 
              data-bs-toggle="dropdown" 
              aria-expanded="false"
            >
              Mon Statut <span class="<%= color %>"> ( <%= state %> )</span>
            </button>
            <div class="dropdown-menu w-100 text-center">
              <form action="/status" method="POST">
                <input type="hidden" name="status" value="true"/>
                <button class="dropdown-item text-success fw-bold" type="submit"> Visible</button></form>
              <form action="/status" method="POST">
                <input type="hidden" name="status" value="false"/>
                <button class="dropdown-item text-danger fw-bold" type="submit"> Invisible</button></form>
            </div>
          </div>
        </div>
        <!-- Demandes reçues -->
        <div>
          <p class="text-center fw-bold text-warning-dark mt-4 fs-4">Demandes reçues :</p>
          <% friendsReceived.forEach(data => { %>
            <div class="d-flex justify-content-center bg-warning-light py-1 mt-1">
              <div class="fw-bold text-secondary fs-5 gap-2" style="width: 200px;">
                  <img 
                    src="./uploads/<%= data.photo %>" 
                    class="card-img-top round wh-25" 
                    alt="photo de profil ami"
                  >
                <span class="text-capitalize"><%= data.pseudo %></span>
              </div>
              <div class="d-flex gap-2">
                <form action="/agree" method="POST">
                  <input type="hidden" name="adder" value="<%= data.pseudo %>"/>
                  <button type="submit" class="btn bg-warning-light fst-italic fw-bold px-2 py-1 p-0 m-0">
                    <i class='bi bi-check-circle-fill text-success'> Accepter</i>
                  </button>
                </form>
                <form action="/remove/disagree" method="POST">
                  <input type="hidden" name="adder" value="<%= data.pseudo %>"/>
                  <button type="submit" class="btn bg-warning-light fst-italic fw-bold px-2 py-1 p-0 m-0">
                    <i class="bi bi-x-circle-fill text-danger"> Refuser</i>
                  </button>
                </form>
              </div>
            </div>
          <% }); %> 
        </div> 
        <!-- Demandes envoyées -->
        <div>
          <p class="text-center fw-bold text-secondary mt-4 fs-4">Demandes envoyées :</p>
          <% friendsSend.forEach(data => { %>
            <div class="d-flex justify-content-center bg-primary-light py-1 mt-1">
              <div class="fw-bold text-secondary fs-5 gap-2" style="width: 200px;">
                  <img 
                    src="./uploads/<%= data.photo %>" 
                    class="card-img-top round wh-25" 
                    alt="photo de profil ami"
                  >
                <span class="text-capitalize"><%= data.pseudo %></span>
              </div>
              <form action="/cancelrequest" method="POST" >
                <input type="hidden" name="adder" value="<%= user.pseudo %>"/>
                <input type="hidden" name="asked" value="<%= data.pseudo %>"/>
                <button class="btn px-2 fst-italic" type="submit">
                  <i class="bi bi-plus-circle-fill text-secondary fw-bold"> Annuler</i>
                </button>
              </form>
            </div>
          <% }); %> 
        </div>   
        <!-- Utilisateurs disponibles -->
        <div>
          <p class="text-center fw-bold text-success mt-4 fs-4">Utilisateurs disponibles :</p>
          <% userPublicList.forEach(data => { %>
            <div class="d-flex justify-content-center bg-success-light py-1 mt-1">
              <div class="fw-bold text-secondary fs-5 gap-2" style="width: 200px;">
                  <img 
                    src="./uploads/<%= data.photo %>" 
                    class="card-img-top round wh-25" 
                    alt="photo de profil ami"
                  >
                <span class="text-capitalize"><%= data.pseudo %></span>
              </div>
              <form action="/sendrequest" method="POST" >
                <input type="hidden" name="adder" value="<%= user.pseudo %>"/>
                <input type="hidden" name="asked" value="<%= data.pseudo %>"/>
                <button class="btn px-2 fst-italic" type="submit">
                  <i class="bi bi-plus-circle-fill text-success fw-bold"> Ajouter</i>
                </button>
              </form>
            </div>
          <% }); %> 
        </div>     
      </div>
    </div>
  </div>
  <!-- Offcanvas -->
  <%- include('./partials/offcanvas'); %>
  <script src="/public/js/addFriend.js"></script>
</body>
</html>
