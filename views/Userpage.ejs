<!DOCTYPE html>
<html>
  <head>
    <title>Page utilisateur</title>
    <%- include('./partials/link') %>
  </head>
  <body>
    <%- include('./partials/nav') %>
    <div class="grid-container bg-white">
      <div class="topbar">
        <%- include('./partials/nav'); %>
      </div>
      <div class="sidebar bg-dark-less text-center d-none d-md-block">
        <%- include('./partials/contact'); %>
        <!-- Old design -->
        <!-- <div class="link">
          <a 
            href="/addfriend" 
            class="btn btn-success btn-sm d-flex align-items-center fw-bold p-0 gap-2 px-2"
          >
            <i class="bi bi-person-fill-add fs-4"></i>
            Ajouter
          </a>
        </div> -->
      </div>
      <div>
        <!--Nav-right -->
        <div class="bg-dark-less px-2">
          <div class="d-flex justify-content-between py-2">
            <!-- Bouton Offcanvas toggle -->
            <div class="text-light">
              <button 
                class="btn bg-info btn-sm d-md-none text-light text-capitalize fw-bold" 
                type="button" 
                data-bs-toggle="offcanvas" 
                data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar">
                  Chat
                <i class="bi bi-chat-square-text-fill"></i>
              </button>
            </div>
            <!-- Account -->
            <div>
              <span class="text-light btn bg-warning-dark btn-sm fw-bold">
                <i class="bi bi-person-vcard-fill"> Compte</i>
              </span>
            </div>
          </div>
        </div>
        <!-- container -->
        <div class="container">
          <h1 class="text-secondary fw-bold mt-2 text-center">Profile</h1>
          <div class="d-flex flex-column align-items-center">
            <div class="card shadow" style="width: 200px;">
              <!-- Upload btn Modal -->
              <button 
                type="button" 
                class="btn btn-info btn-sm rounded-bottom-0" 
                data-bs-toggle="modal" 
                data-bs-target="#uploadModal"
              >
                <i class="bi bi-pencil-square"></i>
              </button>
              <img 
                src="./uploads/<%= logoPhoto %>" 
                class="card-img-top rounded-0" 
                alt="photo de profil ami" 
              >
              <div class="card-body">
                <p class="card-text text-center text-secondary fw-bold text-capitalize fs-2">
                  <%= user.pseudo  %>
                </p>
              </div>
            </div>
          </div>
          <!-- Add friend -->
          <div class="text-center mt-4">
            <a href="/addfriend" class="btn btn-success btn-lg shadow">
              <i class="bi bi-person-fill-add"> Amis</i>
            </a>
          </div>
          <!-- Mes amis -->
          <div class="bg-info-light shadow mt-4">
            <h3 class="text-center text-light bg-info fw-bold ">Mes Amis :</h3>
            <% friends.forEach(data =>  { %>
              <div class="d-flex justify-content-center mt-2">
                <!-- info friend -->
                <div class="d-flex align-items-center fw-bold text-secondary fs-5 gap-2 mx-2" style="width: 200px;">
                  <img 
                    src="./uploads/<%= data.photo %>" 
                    class="card-img-top round wh-25" 
                    alt="photo de profil ami"
                  >
                  <span class="text-capitalize"><%= data.pseudo %></span>
                </div>
                <!-- Ecrire message -->
                <form action="/chat" method="POST">
                  <input type="hidden" name="destinataire" value="<%= data.pseudo %>"/>
                  <button class="btn px-0 fst-italic" type="submit" >
                    <i class="bi bi-chat-square-text-fill text-info-dark fw-bold"> Ecrire.. </i> 
                  </button>
                </form>
              </div>
            <% }); %> 
          </div>
        </div> 
      </div>
    </div>
    <%- include('./partials/uploadModal'); %>
    <%- include('./partials/offcanvas'); %>
  </body>
</html>
